
@model IEnumerable<InfSystemWebApplication.Models.Product>

@{
    ViewBag.Title = "Товары";
}

<h3>Список товаров</h3>

<p>
    @Html.ActionLink("Добавить товар", "Create", new { returnUrl = "/Products/Index" })
</p>

<p>
    @Html.ActionLink("Выгрузить в MS Excel", "Export")
</p>

<p>
    @Html.ActionLink("Поиск", "Query")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.View)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier.View)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CurrentPrice)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.View)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.View)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.CurrentPrice.View)
            </td>*@
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id, returnUrl = "/Products/Index" }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id, returnUrl = "/Products/Index" })
            </td>
        </tr>
    }

</table>


