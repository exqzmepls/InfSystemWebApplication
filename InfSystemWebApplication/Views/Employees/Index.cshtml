@model IEnumerable<InfSystemWebApplication.Models.Employee>

@{
    ViewBag.Title = "Сотрудники";
}

<h2>Список сотрудников</h2>

<p>
    @Html.ActionLink("Добавить нового сотрудника", "Create", new { returnUrl = "/Employees/Index" })
</p>

<p>
    @Html.ActionLink("Выгрузить в MS Excel", "Export")
</p>

<p>
    @Html.ActionLink("Поиск", "Query")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person.View)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position.View)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntranceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LeaveDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.View)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.View)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntranceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveDate)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id, returnUrl = "/Employees/Index" }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id, returnUrl = "/Employees/Index" })
            </td>
        </tr>
    }

</table>
