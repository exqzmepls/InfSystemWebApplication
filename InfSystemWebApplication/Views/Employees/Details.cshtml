@model InfSystemWebApplication.Models.Employee

@{
    ViewBag.Title = Model.View;
}

<h3>Информация о сотруднике</h3>

<div>
    <h4>Сотрудник</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Person.View)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Person.View)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Position.View)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position.View)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EntranceDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EntranceDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LeaveDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LeaveDate)
        </dd>

    </dl>

    @if (Model.Sales.Any())
    {
        <hr />
        <h4>Продажи</h4>
        <table class="table">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Покупатель
                </th>
                <th>
                    Дата
                </th>
                <th>
                    Итог
                </th>

            </tr>
            @for (int i = 0; i < Model.Sales.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Sales[i].Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Sales[i].Customer.View)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Sales[i].Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Sales[i].Total)
                    </td>
                </tr>
            }
        </table>
    }
</div>
<p>
    @Html.ActionLink("Изменить", "Edit", new { id = Model.Id, returnUrl = $"/Employees/Details/{Model.Id}" }) |
    @Html.ActionLink("К списку сотрудников", "Index")
</p>
